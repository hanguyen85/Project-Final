<h2 class="mt-5 pt-4 mb-4 text-center fw-bold">
    OUR ROOMS
</h2>

<div class="container">
    <div class="row ms-5">
        {{#each romType }}
        <div class="col-lg-4 col-md-6 my-3">
            <form action="/room/{{_id}}" method="get">
                <div class="card flex-column">
                    <input type="hidden" name="roomType" value="{{_id}}">
                    <img src="{{image}}" class="card-img-top" style="width: 278px; height: 200px; object-fit:cover;">
                    <div class="card-body">
                        <h5 class="card-title">{{roomName}}</h5>
                        <h6>Guest: {{maxPeople}}</h6>
                        <p class="card-text">{{description}}</p>
                        <button type="submit" class="btn btn-outline-dark shadow-none">More details</button>
                    </div>
                </div>
            </form>
        </div>
        {{/each}}
        <div class="col-lg-12 text-center mt-5 mb-5">
            <a href="/room" class="btn btn-dark rounded-0 fw-bold">More Rooms</a>
        </div>
    </div>

    <h2 class="mt-5 pt-4 mb-4 text-center fw-bold">REACH US</h2>
