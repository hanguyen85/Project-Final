<div class="container-fluid">
    <div class="row">
        <div class="col-md-5 m-auto">
            <form action="/user/login" method="post">
                <div class="w-50 m-auto">
                    {{#if error}}
                    <div class="alert alert-warning alert-dismissible fade show mt-2 text-center" role="alert">
                        <strong>{{error}}</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {{/if}}
                    <h2 class="mb-2" style="text-align: left;">Sign in</h2>
                    <input class="form-control rounded-1 mb-4 mt-2" type="text" name="email" placeholder="Enter email"
                        style="height: 40px;">
                    <input class="form-control rounded-1" type="password" name="password" placeholder="Enter password"
                        style="height: 40px;">
                    <div class="d-grid">
                        <button class="btn btn-primary mt-4 mb-1" type="submit">LOGIN</button>
                    </div>
                    <a href="/" class="nav-link text-center mt-2" style="color: Black;">
                        Back to home
                    </a>
                    <hr>
                </div>
                <p class="small fw-bold mt-2 text-center d-flex justify-content-center">
                    Don't have an account?
                    <a href="/user/register" class="nav-link" style="color: Orange; margin-left: 2px">
                        SIGN UP
                    </a>
                </p>
            </form>
        </div>
        <div class="col-md-7">
            <img src="/images/anh1.png" class="img-fluid vh-100" alt="">
        </div>
    </div>
</div>