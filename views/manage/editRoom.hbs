<main class="content px-3 py-2">
    <h1>Update Room</h1>
    <div class="container-fluid bg-light border border-1">
        <form action="/manage/editRoom" method="post" onsubmit="return validateRoomForm();">
            <div class="modal-body">
                <input type="hidden" name="id" value="{{room._id}}">
                <div class="mb-3">
                    <label for="roomNumber" class="form-label">Room Name</label>
                    <input name="roomNumber" type="text" class="form-control" id="roomNumber"
                        value="{{room.roomNumber}}">
                    <span id="roomNumberError" style="color: red;"></span>
                </div>
                <div class="mb-3">
                    <label for="roomType" class="form-label">List room type</label>
                    <select name="roomType" id='dropdown1' class='form-select'>
                        {{#each roomType }}
                        <option value="{{_id}}">{{ roomName }}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">List room type</label>
                    <select name="status" id='dropdown1' class='form-select'>
                        <option value="available" {{#if (eq room.status 'available' )}}selected{{/if}}>
                            Available
                        </option>
                        <option value="unavailable" {{#if (eq room.status 'unavailable' )}}selected{{/if}}>
                            Unavailable
                        </option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price</label>
                    <input name="price" type="text" class="form-control" id="price" value="{{room.price}}">
                    <span id="priceError" style="color: red;"></span>
                </div>
                <div class="mb-3">
                    <label for="utilities" class="form-label">Utilities</label>
                    <input name="utilities" type="text" class="form-control" id="utilities" value="{{room.utilities}}">
                    <span id="utilitiesError" style="color: red;"></span>
                </div>

                <div class="modal-footer mb-2">
                    <input type="submit" class="btn btn-warning" value="Update room"></input>
                </div>
        </form>
    </div>
</main>